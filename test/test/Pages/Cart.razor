@page "/Cart"

<!DOCTYPE html>


<head>
    <PageTitle>My Library Cart</PageTitle>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/Cart.css" />
</head>



<body>
     @* PUT HEADER TASKBAR THING HERE*@
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <h1 id="cart-title">Your Cart</h1>
                <table class="table">
                    <tbody>
                        <tr class="cart-item">
                            <td>
                                <img src="images/Book9.png" alt ="Book Cover" height="120" />
                            </td>
                            <td class="book-details"> 
                                <p>Title: Shadow and Bone</p>
