@using System.ComponentModel.DataAnnotations

<div style=" display: flex; flex-direction: column; align-items: center;">


    <div style=" margin-top: 125px;">
        <h1 class="header"> We just need a bit more info: </h1>
    </div>

    <BSCard CardType="CardType.Card" style="width: 60%;">
        <BSCard CardType="CardType.Body">
            <EditForm Model="@Model" OnValidSubmit="@Submit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-row">
                    <div class="form-group col">
                        <label>Email</label>
                        <InputText @bind-Value="Model.Email" class="form-control" />
                        <ValidationMessage For="@(() => Model.Email)" />
                    </div>

                    <div class="form-group col">
                        <label>Confirm Email</label>
                        <InputText @bind-Value="Model.ConfirmEmail" class="form-control" />
                        <ValidationMessage For="@(() => Model.ConfirmEmail)" />
                    </div>

                </div>

                <div class="form-row">
                    <div class="form-group col">
                        <label>Pin</label>
                        <InputDate @bind-Value="Model.Pin" class="form-control" />
                        <ValidationMessage For="@(() => Model.Pin)" />
                    </div>

                    <div class="form-group col">
                        <label>Confirm Pin</label>
                        <InputDate @bind-Value="Model.ConfirmPin" class="form-control" />
                        <ValidationMessage For="@(() => Model.ConfirmPin)" />
                    </div>

                </div>

                <div class="form-group form-check">
                    <InputCheckbox @bind-Value="Model.AcceptTerms" id="acceptTerms" class="form-check-input" />
                    <label for="acceptTerms" class="form-check-label">Accept Terms & Conditions</label>
                    <ValidationMessage For="@(() => Model.AcceptTerms)" />
                </div>

                <div class="text-center">
                    <button @onclick="@Back" class="btn btn-secondary">Back</button>
                    <button type="submit" class="btn btn-primary mr-1">Register</button>
                </div>

            </EditForm>

        </BSCard>

    </BSCard>


</div>



<style>
    .header {
        font-size: 150%;
    }

    .info-box {
        width: 150px;
        height: 50px;
        border-width: 1px;
        margin-left: 10px;
        margin-right: 10px;
        margin-top: 20px;
    }

    .info-box-two {
        width: 200px;
        height: 50px;
        border-width: 1px;
        margin-left: 10px;
        margin-right: 10px;
        margin-top: 20px;
    }

    .account-btn {
        width: 150px;
        height: 40px;
        margin-top: 20px;
    }

    .login-btn {
        width: 75px;
        height: 30px;
        margin-top: 10px;
    }


    .back-btn {
        width: 75px;
        height: 30px;
    }
</style>

@code {

    [Parameter] public ModelTwo Model { get; set; }


    [Parameter]
    public EventCallback SubmitPage { get; set; }

    [Parameter]
    public EventCallback GoBack { get; set; }

    private async Task Submit()
    {
        await SubmitPage.InvokeAsync();
    }

    private async Task Back()
    {
        await GoBack.InvokeAsync();
    }



}

