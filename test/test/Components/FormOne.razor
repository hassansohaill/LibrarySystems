@using System.ComponentModel.DataAnnotations

<div style=" display: flex; flex-direction: column; align-items: center;">


    <div style=" margin-top: 125px;">
        <h1 class="header"> Please tell us a bit about yourself: </h1>
    </div>

    <BSCard CardType="CardType.Card" style="width: 60%;">
        <BSCard CardType="CardType.Body">
            <EditForm Model="@Model" OnValidSubmit="@Next">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-row">
                    <div class="form-group col">
                        <label>First Name</label>
                        <InputText @bind-Value="Model.FirstName" class="form-control" />
                        <ValidationMessage For="@(() => Model.FirstName)" />
                    </div>

                    <div class="form-group col">
                        <label>Last Name</label>
                        <InputText @bind-Value="Model.LastName" class="form-control" />
                        <ValidationMessage For="@(() => Model.LastName)" />
                    </div>

                </div>

                <div class="form-row">
                    <div class="form-group col">
                        <label>Date of Birth</label>
                        <InputDate @bind-Value="Model.DateOfBirth" class="form-control" />
                        <ValidationMessage For="@(() => Model.DateOfBirth)" />
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary mr-1">Next</button>
                </div>

            </EditForm>

        </BSCard>

    </BSCard>


</div>



<style>
    .header {
        font-size: 150%;
    }

    .info-box {
        width: 150px;
        height: 50px;
        border-width: 1px;
        margin-left: 10px;
        margin-right: 10px;
        margin-top: 20px;
    }

    .info-box-two {
        width: 200px;
        height: 50px;
        border-width: 1px;
        margin-left: 10px;
        margin-right: 10px;
        margin-top: 20px;
    }

    .account-btn {
        width: 150px;
        height: 40px;
        margin-top: 20px;
    }

    .login-btn {
        width: 75px;
        height: 30px;
        margin-top: 10px;
    }


    .back-btn {
        width: 75px;
        height: 30px;
    }
</style>

@code {

    [Parameter] public ModelOne Model { get; set; }

    [Parameter]
    public EventCallback NextPage { get; set; }

    private async Task Next()
    {
        await NextPage.InvokeAsync();
    }

}
