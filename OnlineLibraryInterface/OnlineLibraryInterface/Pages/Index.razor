        <style>
            .subscribe-button {
                background-color: rgb(200,0,0);
                color: white;
                border: none;
                height: 36px;
                width: 105px;
                border-radius: 2px;
                cursor: pointer;
                margin-right: 8px;
            }

                .subscribe-button:hover {
                    opacity: 0.8;
                }

                .subscribe-button:active {
                    opacity: 0.4;
                }

            .join-button {
                background-color: white;
                border-color: rgb(41, 118, 221);
                border-style: solid;
                border-width: 1px;
